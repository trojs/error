{
    "root": true,
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "globals": {
        "describe": false,
        "it": false,
        "expect": false
    },
    "extends": [
        "@hckrnews/eslint-config"
    ],
    "parserOptions": {
        "sourceType": "module",
        "parser": "@babel/eslint-parserbabel-eslint",
        "babelOptions": {
            "configFile": "babel.config.js",
        }
    },
    "overrides": [
        {
            "files": [
                "**/__tests__/*.{j,t}s?(x)",
                "**/tests/unit/**/*.spec.{j,t}s?(x)"
            ],
            "env": {
                "jest": true
            }
        }
    ]
}
